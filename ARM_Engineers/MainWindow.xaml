                    </TabItem>
                    
                    <TabItem Header="Картриджы" Width="100" Height="30">
                        <DataGrid x:Name="Cartridge_Spisanie_DataGrid" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <materialDesign:DataGridTextColumn Header="Инв/номер" Binding="{Binding Inventory_Number}" />
                                <materialDesign:DataGridTextColumn Header="Название" Binding="{Binding Name_Cartinge}"/>
                                <materialDesign:DataGridTextColumn Header="Примечания" Binding="{Binding Description}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    
                    <TabItem Header="Сетевое оборудование" Width="100" Height="30">
                        <DataGrid x:Name="NetworkDevice_Spisanie_DataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <materialDesign:DataGridTextColumn Header="Инв/номер" Binding="{Binding Inventory_Number}" />
                                <materialDesign:DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                                <materialDesign:DataGridTextColumn Header="Примечания" Binding="{Binding Description}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    
                    <TabItem Header="прочее" Width="100" Height="30">
                        <DataGrid x:Name="OtherDevice_Spisanie_DataGrid" AutoGenerateColumns="False" IsReadOnly="True">
